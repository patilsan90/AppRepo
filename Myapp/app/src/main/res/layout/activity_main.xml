<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <RelativeLayout
                android:id="@+id/home_fragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:padding="2dp">

                <Button
                    android:id="@+id/showCart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/button_margin"
                    android:layout_weight=".5"
                    android:onClick="showMyCart"
                    android:text="My Cart"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/button_margin"
                    android:layout_weight=".5"
                    android:onClick="scanProduct"
                    android:text="Scan Product"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <!-- The navigation drawer -->
    <LinearLayout
        android:id="@+id/drawerPane"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffffff"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/drawer_item_user_margin"
            android:background="#2F4F4F"
            android:paddingBottom="@dimen/drawer_item_margin"
            android:paddingLeft="@dimen/drawer_item_margin"
            android:paddingTop="@dimen/drawer_item_margin"
            android:text="User Name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#D3D3D3"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/drawer_item_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:shadowColor="@color/colorAccent"
                android:text="Wallet Balance"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#111" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:shadowColor="@color/colorAccent"
                android:text="0 Rs."
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#111"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/drawer_item_margin"
            android:shadowColor="@color/colorAccent"
            android:text="My Orders"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#111" />

        <RelativeLayout
            android:id="@+id/payback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/drawer_item_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:shadowColor="@color/colorAccent"
                android:text="Payback Points"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#111" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:shadowColor="@color/colorAccent"
                android:text="100"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#111"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/drawer_item_margin"
            android:shadowColor="@color/colorAccent"
            android:text="Add Money to wallet"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#111" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/drawer_item_margin"
            android:shadowColor="@color/colorAccent"
            android:text="Help Center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#111" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/drawer_item_margin"
            android:shadowColor="@color/colorAccent"
            android:text="About"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#111" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/drawer_item_margin"
            android:shadowColor="@color/colorAccent"
            android:text="Logout"
            android:onClick="logout"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#111" />

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
